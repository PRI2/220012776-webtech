<%- include('header'); -%>
	<h4>Patients Records (<%= patients.length %>)<button class="btn btn-primary pull-right"><a href="/admin/addPatient" style="color:#fff"><i class="glyphicon glyphicon-plus"></i> Add Patient</a></button></h4>

    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

	<table class="table table-bordered">
		<thead>
			<th></th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Phone Number</th>
			<th>Date Of Birth</th>
			<th>Residential Address</th>
			<th>Emergency Contact</th>
			<th></th>
		</thead>
		<tbody>

  		<!-- Loop through patients -->
	  <% for(var i = 0; i < patients.length; i++) {%>
	    <tr class="employee">
	      <td><%= i + 1 %></td>:
	      <td><%= patients[i].firstname %></td>:
	      <td><%= patients[i].lastname %></td>:
	      <td><%= patients[i].phonenumber %></td>
	      <td ><span style="font-size: 12px"><%= patients[i].dateofbirth %></span></td>
	      <td><span style="font-size: 12px"><%= patients[i].residentialaddress %></span></td>
	      <td><%= patients[i].emergencycontactnumber %></td>
	      <td>
	      	<div class="btn-group" role="group" aria-label="">
  				<a href="/admin/editPatient/<%= patients[i]._id %>" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-pencil"></i></a>
  				<a href="/admin/payments" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-list-alt"></i></a>
  				<a href="/admin/deletePatient/<%= patients[i]._id %>" onclick="return alert('Are You sure?')" 
  					class="btn btn-danger btn-sm"><i class="glyphicon glyphicon-trash"></i></a>
			</div>
	      </td>
	    </tr>
	  <% } %>
	  <% if (patients.length == 0)  { %>
	  <tr >
	  	<td colspan="7"><div class="alert alert-warning" role="alert"> No Patient record(s) found</div></td>
	  </tr>
	  <% } %>


	</table>
	  

<%- include('footer'); -%>