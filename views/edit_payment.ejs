<%- include('header'); -%>

<form method="POST" action="/admin/updatePayment/<%= payment.id %>">
  <div class="col-md-6">
      <div class="col-md-6">
      
  <div class="form-group">
  <label for="sel1">Select Patient</label>
  <select class="form-control" id="sel1" >
   <% for(var i = 0; i < patients.length; i++) {%>
    <option value="<%= patients[i]._id %>" 
   <% if(patients[i]._id ==  payment.patientId) {%>
   selected="true"
    <% } %>
    ><%= patients[i].firstname + " "+patients[i].lastname  %></option>
    <% } %>
  </select>
</div>
    
  </div>
  <div class="col-md-6">
      <div class="form-group">
            <input type="string"  value="<%= payment.balanceamount %>" step="any" name="balanceamount" class="form-control" placeholder="Balance Due">
        </div>
        <div class="form-group">
           <input type="string" value="<%= payment.balanceamount %>"  name="amountpaid" class="form-control" placeholder="Amount Paid">
        </div>
  </div>
  <button type="submit" class="btn btn-priamry">Update Payment</button>
</form>


