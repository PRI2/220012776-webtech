<%- include('header'); -%>

<form method="POST" action="/admin/addPatient">
	<div class="col-md-6">
		  <div class="form-group">
   				  <input type="text" name="firstname" required class="form-control" placeholder="Please Enter First Name">
   		  </div>
   		  <div class="form-group">
   				  <input type="text" name="lastname" required class="form-control" placeholder="Please Enter Last Name">
   		  </div>
   		  <div class="form-group">
   				  <input type="text" name="phonenumber" required class="form-control" placeholder="Please Phone Number">
   		  </div>
  </div>
  <div class="col-md-6">
  <div class="form-group">
   				  <input type="text" name="dateofbirth" required class="form-control" placeholder="Enter Date of Birth">
   		  </div>
  <div class="form-group">
   				  <textarea rows="4" name="residentialaddress" required class="form-control" placeholder="Please Enter Residential Address"></textarea>
   		  </div>
		  <div class="form-group">
   				  <input type="text" name="emergencycontactnumber" required class="form-control" placeholder="Please Emergency Contact Number">
   		  </div>
  </div>
  <button type="submit" class="btn btn-priamry">Save Patient</button>
</form>


<%- include('footer'); -%>

